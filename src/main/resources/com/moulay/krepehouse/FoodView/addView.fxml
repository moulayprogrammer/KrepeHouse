<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<DialogPane expanded="true" nodeOrientation="RIGHT_TO_LEFT" prefWidth="450.0" style="-fx-background-color: #F8F8F8;" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.moulay.krepehouse.Controllers.FoodControllers.AddController">
   <header>
      <AnchorPane prefHeight="60.0" style="-fx-background-color: FFF;" styleClass="bar-top" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="55.0" layoutY="27.0" styleClass="font-hs-dream" text="إضافة وجبة/مشروب" textFill="#777777" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="15.0">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </AnchorPane>
   </header>
   <content>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: FFF;" styleClass="container" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <VBox spacing="10.0" styleClass="container-table" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox prefHeight="40.0">
                           <children>
                              <Label prefWidth="100.0" styleClass="font-hs-dream" text="الاسم بالعربية" textFill="#2d8b9a">
                                 <font>
                                    <Font name="HSDream-Regular" size="15.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="tfNameAr" maxWidth="1.7976931348623157E308" promptText="ادخل الاسم بالعرربية" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                        <HBox layoutX="21.0" layoutY="21.0" prefHeight="40.0">
                           <children>
                              <Label prefWidth="100.0" styleClass="font-hs-dream" text="الاسم بالفرنسية" textFill="#2d8b9a">
                                 <font>
                                    <Font name="HSDream-Regular" size="15.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="tfNameFr" maxWidth="1.7976931348623157E308" promptText="ادخل الاسم بالفرنسية" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Label prefWidth="100.0" styleClass="font-hs-dream" text="السعر" textFill="#2d8b9a">
                                 <font>
                                    <Font name="HSDream-Regular" size="15.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="tfPrice" maxWidth="1.7976931348623157E308" promptText="ادخل السعر" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                        <Label styleClass="font-hs-dream" text="الوصف (ليس مطلوب)" textFill="#2d8b9a">
                           <font>
                              <Font name="HSDream-Regular" size="15.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="taDesc" minHeight="-Infinity" prefHeight="120.0" promptText="اكتب وصف الوجبة او المكونات" />
                        <HBox fillHeight="false" spacing="20.0" styleClass="container-table">
                           <children>
                              <ImageView fx:id="ivPicture" fitHeight="60.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../Images/crepe.jpg" />
                                 </image>
                              </ImageView>
                              <VBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Button mnemonicParsing="false" onAction="#OnAddPicture" prefWidth="100.0" styleClass="confirm-button" text="إضافة صورة" textFill="WHITE">
                                       <cursor>
                                          <Cursor fx:constant="HAND" />
                                       </cursor>
                                    </Button>
                                    <Button mnemonicParsing="false" onAction="#OnDeletePicture" prefWidth="100.0" styleClass="cancel-button" text="حذف صورة" textFill="WHITE">
                                       <cursor>
                                          <Cursor fx:constant="HAND" />
                                       </cursor>
                                    </Button>
                                 </children>
                              </VBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
            <Label fx:id="lbAlert" layoutX="10.0" layoutY="328.0" maxWidth="1.7976931348623157E308" opacity="0.0" style="-fx-font-size: 14; -fx-background-color: #f0ad4e; -fx-border-color: #eea236; -fx-border-width: 2; -fx-background-radius: 5; -fx-border-radius: 5;" textFill="WHITE" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets bottom="3.0" left="5.0" right="3.0" top="3.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="5.0" top="10.0" />
               </VBox.margin>
            </Label>
            <HBox spacing="10.0">
               <children>
                  <HBox HBox.hgrow="ALWAYS">
                     <children>
                        <Button maxHeight="26.0" maxWidth="1.7976931348623157E308" minHeight="26.0" mnemonicParsing="false" onAction="#OnSaveStay" prefHeight="26.0" styleClass="info-button" text="حفظ و بقاء" textFill="WHITE">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <font>
                              <Font size="13.0" />
                           </font>
                           <graphic>
                              <FontAwesomeIconView fill="WHITE" glyphName="CHECK_SQUARE" size="14.0" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  <Button fx:id="btnInsert" maxHeight="26.0" maxWidth="65.0" minHeight="26.0" minWidth="65.0" mnemonicParsing="false" onAction="#OnSave" prefHeight="26.0" prefWidth="65.0" styleClass="confirm-button" text="حفظ" textFill="WHITE">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <font>
                        <Font size="13.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="CHECK_SQUARE" size="14.0" />
                     </graphic>
                  </Button>
                  <Button maxHeight="26.0" maxWidth="70.0" minHeight="26.0" minWidth="70.0" mnemonicParsing="false" onAction="#OnClose" prefHeight="26.0" prefWidth="70.0" styleClass="cancel-button" text="إلغاء" textFill="WHITE">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="REMOVE" size="14.0" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </content>
</DialogPane>
