<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXListView?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane nodeOrientation="RIGHT_TO_LEFT" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.moulay.krepehouse.Controllers.MenuControllers.AddController">
   <header>
      <AnchorPane style="-fx-background-color: FFF;" styleClass="bar-top">
         <children>
            <Label layoutX="55.0" layoutY="27.0" styleClass="font-hs-dream" text="Add Menu" textFill="#777777" AnchorPane.bottomAnchor="27.0" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="27.0">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </header>
   <content>
      <HBox spacing="20.0" style="-fx-background-color: #FFF;">
         <children>
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" style="-fx-background-color: FFF;" styleClass="container-table">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
               <HBox spacing="10.0">
                  <children>
                     <TextField focusTraversable="false" promptText="أدخل إسم الوجبة" HBox.hgrow="ALWAYS" />
                     <Button mnemonicParsing="false" prefWidth="90.0" styleClass="add-picture-food" text="search" textFill="WHITE">
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                        <graphic>
                           <FontAwesomeIconView />
                        </graphic>
                     </Button>
                     <Button mnemonicParsing="false" prefWidth="90.0" styleClass="remove-picture-food" text="refresh" textFill="WHITE">
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                        <graphic>
                           <FontAwesomeIconView />
                        </graphic>
                     </Button>
                  </children>
               </HBox>
               <TableView fx:id="table_Bill" minHeight="400.0" styleClass="container-table">
                  <columns>
                     <TableColumn maxWidth="70.0" prefWidth="70.0" styleClass="column-table">
                              <graphic>
                                 <JFXCheckBox checkedColor="#ee3d48" text="0" textFill="WHITE" unCheckedColor="#848484">
                                    <font>
                                       <Font size="9.0" />
                                    </font>
                                 </JFXCheckBox>
                              </graphic>
                           </TableColumn>
                     <TableColumn fx:id="col_Product_Name" prefWidth="150.0" styleClass="column-table" text="name" />
                     <TableColumn fx:id="col_Unit" maxWidth="90.0" prefWidth="90.0" styleClass="column-table" text="الوحدة" />
                     <TableColumn fx:id="col_Quantity" maxWidth="90.0" prefWidth="90.0" styleClass="column-table" text="الكمية" />
                     <TableColumn fx:id="col_Price" editable="false" maxWidth="110.0" prefWidth="110.0" sortable="false" styleClass="column-table" text="سعر الوحدة" />
                     <TableColumn fx:id="col_Total_Price" maxWidth="100.0" prefWidth="100.0" styleClass="column-table" text="الإجمالي" />
                  </columns>
               </TableView>
               <HBox>
                  <children>
                     <HBox alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" spacing="15.0" HBox.hgrow="ALWAYS">
                        <children>
                           <Button maxHeight="26.0" minHeight="26.0" mnemonicParsing="false" prefHeight="26.0" styleClass="save-button-small" text="add qte price" textFill="WHITE">
                              <graphic>
                                 <FontAwesomeIconView fill="WHITE" glyphName="REMOVE" size="14.0" />
                              </graphic>
                              <cursor>
                                 <Cursor fx:constant="HAND" />
                              </cursor>
                              <font>
                                 <Font size="13.0" />
                              </font>
                           </Button>
                           <Button maxHeight="26.0" minHeight="26.0" mnemonicParsing="false" prefHeight="26.0" styleClass="cancle-button-small" text="add qte ghange" textFill="WHITE">
                              <font>
                                 <Font size="13.0" />
                              </font>
                              <graphic>
                                 <FontAwesomeIconView fill="WHITE" glyphName="REMOVE" size="14.0" />
                              </graphic>
                              <padding>
                                 <Insets right="10.0" />
                              </padding>
                              <cursor>
                                 <Cursor fx:constant="HAND" />
                              </cursor>
                           </Button>
                           <Button layoutX="91.0" layoutY="10.0" maxHeight="26.0" minHeight="26.0" mnemonicParsing="false" prefHeight="26.0" styleClass="cancle-button-small" text="add " textFill="WHITE">
                              <font>
                                 <Font size="13.0" />
                              </font>
                              <graphic>
                                 <FontAwesomeIconView fill="WHITE" glyphName="REMOVE" size="14.0" />
                              </graphic>
                              <padding>
                                 <Insets right="10.0" />
                              </padding>
                              <cursor>
                                 <Cursor fx:constant="HAND" />
                              </cursor>
                           </Button>
                        </children>
                     </HBox>
                  </children>
               </HBox>
            </VBox>
            <VBox spacing="10.0" styleClass="container-table">
               <children>
                  <TextField prefHeight="28.0" prefWidth="220.0" promptText="بحث عن وجبة">
                     <font>
                        <Font name="HSDream-Regular" size="13.0" />
                     </font>
                  </TextField>
                  <JFXListView fx:id="listViewProduct" minHeight="400.0" styleClass="list-view-products" />
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Button mnemonicParsing="false" prefWidth="115.0" styleClass="add-product-factory" text="update" textFill="WHITE">
                           <font>
                              <Font name="HSDream-Regular" size="13.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button mnemonicParsing="false" prefWidth="115.0" styleClass="remove-product-from-factory" text="delete" textFill="WHITE">
                           <font>
                              <Font name="HSDream-Regular" size="13.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </content>
</DialogPane>
